   0035                      31 man_entity_init:
   0035 CD 39 00      [17]   32     call man_entity_create
   0038 C9            [10]   33     ret
                             34 
                             35 ;; Input
                             36 ;;   HL: pointer to entity initializer
   0039                      37 man_entity_create:
   0039 ED 5B 01 00   [20]   38     ld      de, (_last_elem_ptr)
